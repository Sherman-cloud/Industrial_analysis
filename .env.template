# 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# API配置
API_KEY=your_api_key_here
MODEL_NAME=deepseek-ai/DeepSeek-R1
BASE_URL=https://api.siliconflow.cn/v1

# 数据配置
DATA_DIR=data
OUTPUT_DIR=output
LOGS_DIR=logs

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# 分析配置
ENABLE_CHARTS=true
CHART_DPI=300
CHART_STYLE=seaborn-v0_8

# 报告配置
REPORT_FORMAT=markdown
REPORT_INCLUDE_CHARTS=true

# 高级配置
MAX_RETRIES=3
REQUEST_TIMEOUT=60
TEMPERATURE=0.7
MAX_TOKENS=4096

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=3600

# 并发配置
MAX_CONCURRENT_REQUESTS=5

# 开发配置
DEBUG=false
VERBOSE=false